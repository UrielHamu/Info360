@{
    ViewData["Title"] = "VerProductosMiLocal";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NombreProyecto</title>
    <link rel="stylesheet" href="site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
</head>

<body>
  <header>
        <ul class="nav justify-content-end">
    <li class="nav-item">
      <a class="nav-link" href='@Url.Action("NuevaView", "Dueño")'>Ver productos generales de mi local</a>
    </li>
     <li class="nav-item">
      <a class="nav-link" href='@Url.Action("VerProductosMiLocal", "Dueño")'> Ver productos con descuentos</a>
    </li>
  </ul>
  </header>
<main>
  <h4 class="owner-title">Estos son los productos de tu negocio: </h4>
  @if (ViewBag.ProductosMiLocal == null)
{
    <p style="color:red">No tenes ningun producto.</p>
}
else
{
    <p style="color:green">Cantidad de productos: @ViewBag.ProductosMiLocal.Count</p>
}
        @foreach (ProductosTemporalesVto producto in ViewBag.ProductosMiLocal)
        {
            <div>
                <img src="~/img/@producto.Foto"/>
                <h2>Producto: @producto.Nombre</h2>
                <h3>Supermercado: @producto.Local</h3>
                <h3>Precio original: $@producto.PrecioInicial</h3>
                <h3>Precio con descuento: $@producto.PrecioConDescuento</h3>
                <h3>Catergoria: @producto.Categoria</h3>
                <h3>Fecha de vencimiento: @producto.FechaVencimiento.ToString("dd/MM/yyyy")</h3>
            
                <form action= '@Url.Action("EliminarProducto", "Dueño")' method="POST" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="@ViewBag.producto.IdLocalesProductosVto">            
                <button type= "submit" class="btn-eliminar">Eliminar</button>
                </form>
            </div>
        }
</main>
<footer class="footer">
    <div class="footer-top">
        <div class="footer-logo">
            <img src="img/Captura_de_pantalla_2025-03-28_122750-removebg-preview.png" alt="Logo FIFO">
            <p>Dale una segunda oportunidad a los alimentos. Reducí el desperdicio, ayudá al planeta </p>
        </div>

        <div class="footer-links">
            <div>
                <h4>Sobre FIFO</h4>
              <ul>
                  <li><a href='@Url.Action("Index", "Account")'>Que es FIFO?</a></li>
                  <li><a href='@Url.Action("Index", "Account")'>Nuestra propuesta</a></li>
                  <li><a href='@Url.Action("Index", "Account")'>Por qué lo hacemos?</a></li>
              </ul>
          </div>
          <div>
              <h4>Dueño</h4>
              <ul>
                  <li><a href='@Url.Action("AgregarProducto", "Dueño")'>Agregar producto</a></li>
                  <li><a href='@Url.Action("EliminarProducto", "Dueño")'>Eliminar producto</a></li>
                  <li><a href='@Url.Action("AgregarProducto", "Dueño")'>Modificar producto</a></li>
                  <li><a href='@Url.Action("VerProductosMiLocal", "Dueño")'>Ver productos</a></li>
              </ul>
          </div>
          <div>
              <h4>Cliente</h4>
              <ul>
                  <li><a href='@Url.Action("VerEmpresas", "Dueño")'>Ver empresas</a></li>
                  <li><a href='@Url.Action("VerProductos", "Dueño")'>Ver productos</a></li>
              </ul>
          </div>
        </div>

    <div class="footer-bottom">
        <p>© 2025 FIFO | Desarrollado por el equipo FIFO</p>
    </div>
</footer>
</body>
</html>